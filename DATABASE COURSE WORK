    Parish VARCHAR(100),
    Sub_count VARCHAR(100),
    County VARCHAR(100),
    Region VARCHAR(50),
    Population INT(11),
    Coordinates VARCHAR(100),
    Malaria_Risk_Level VARCHAR(50),
